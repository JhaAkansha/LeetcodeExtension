{
  "manifest_version": 3,
  "name": "LeetSync Extension",
  "version": "1.0",
  "description": "Automatically uploads LeetCode solutions to GitHub in topic-based folders.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
